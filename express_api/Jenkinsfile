pipeline {
    agent none
    options {
      	skipDefaultCheckout()
  		disableConcurrentBuilds()
    }

    stages {

      stage('docker-build'){
          agent any

                steps  {

                        checkout scm
                        sh 'pwd'
                        sh 'cd express_api'
                        sh 'make build'

                        archiveArtifacts artifacts: 'docker-tag.txt', onlyIfSuccessful: true
                }
      }

    } // End stages

} // En

